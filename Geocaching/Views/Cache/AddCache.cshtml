@using Geocaching.App_GlobalResources
@model Geocaching.ViewModels.AddCacheViewModel

@{
    ViewBag.Title = @Resource.NewCache;
}
<section id="single-page-header">
    <div class="overlay">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="single-page-header-left">
                        <h2>@Resource.NewCache</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@using (Html.BeginForm("AddCache", "Cache", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="title-area">
                        <p>
                            @Html.ValidationSummary(true, "", new { @id = "text-danger" })
                        </p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @autocomplete = "off", @placeholder = Resource.CacheName, @class = "form-control" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "control-label" })
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.TextAreaFor(model => model.Description, new { @style = "width: 100%", @placeholder = Resource.Description, @rows = "3", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "control-label" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Address.Longitude, new {htmlAttributes = new { @autocomplete = "off", @placeholder = Resource.Longitude, @class = "form-control"}})
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.ValidationMessageFor(model => model.Address.Longitude, "", new {@class = "control-label"})
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Address.Latitude, new {htmlAttributes = new { @autocomplete = "off", @placeholder = Resource.Latitude, @class = "form-control"}})
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.ValidationMessageFor(model => model.Address.Latitude, "", new {@class = "control-label"})
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Address.Country, new {htmlAttributes = new { @autocomplete = "off", @placeholder = Resource.Country, @class = "form-control"}})
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Address.Region, new {htmlAttributes = new { @autocomplete = "off", @placeholder = Resource.Region, @class = "form-control"}})
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Address.City, new { htmlAttributes = new { @autocomplete = "off", @placeholder = Resource.City, @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="file" id="Photo" name="upload" lang="en-US"/>
                            </div>
                        </div>
                    </div>

                    <input type="submit" value=@Resource.Add class="comment-btn" />
                </div>
            </div>
        </div>
    </section>
}
