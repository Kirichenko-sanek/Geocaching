@using Geocaching.App_GlobalResources
@model Geocaching.ViewModels.SearchViewModel


<aside class="blog-side-bar">
    @using (Html.BeginForm("Search", "Cache", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true, "", new { @id = "text-danger" })
        <div class="sidebar-widget">
            @Html.EditorFor(model => model.Name, new {htmlAttributes = new { @autocomplete="off", @placeholder = Resource.CacheName, @class = "form-control"}})
        </div>
        <div class="sidebar-widget">
            @Html.EditorFor(model => model.Longitude, new { htmlAttributes = new { @autocomplete = "off", @placeholder = Resource.Longitude, @class = "form-control" } })
        </div>
        <div class="sidebar-widget">
            @Html.EditorFor(model => model.Latitude, new { htmlAttributes = new { @autocomplete = "off", @placeholder = Resource.Latitude, @class = "form-control" } })
        </div>
        <div class="sidebar-widget">
            @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @autocomplete = "off", @placeholder = Resource.Country, @class = "form-control" } })
        </div>
        <div class="sidebar-widget">
            @Html.EditorFor(model => model.Region, new { htmlAttributes = new { @autocomplete = "off", @placeholder = Resource.Region, @class = "form-control" } })
        </div>
        <div class="sidebar-widget">
            @Html.EditorFor(model => model.City, new {htmlAttributes = new { @autocomplete = "off", @placeholder = Resource.City, @class = "form-control"}})
        </div>
        <input type="submit" value=@Resource.Search class="comment-btn" />
    }
</aside>


