@using Geocaching.App_GlobalResources
@model Geocaching.Models.PassRecoveryViewModel
<div class="modal-header">
    <button aria-label="Close" data-dismiss="modal" class="close" type="button"><span aria-hidden="true">×</span></button>
    <h4 class="modal-title">
        <i class="fa fa-lock"></i>
        @Resource.Recovery
    </h4>
</div>
@using (Html.BeginForm("PassRecovery", "Account", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-group">
            @Html.ValidationSummary(true, "", new { @id = "text-danger" })
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @placeholder = Resource.Email, @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="loginbox">
            <input type="submit" value=@Resource.Send class="btn signin-btn" />
        </div>
        <div class="modal-footer footer-box">
            <span><a id="signup-btn" href="#">@Resource.Registration</a></span>
            <span><a id="login-btn" href="#">@Resource.LogIn</a></span>
        </div>      
    </div>
}
