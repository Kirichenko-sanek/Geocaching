@using Geocaching.App_GlobalResources
@model Geocaching.ViewModels.PassRecoveryViewModel
@{
    ViewBag.Title = @Resource.Recovery;
}

<section id="single-page-header">
    <div class="overlay">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="single-page-header-left">
                        <h2>@Resource.Recovery</h2>

                    </div>
                </div>
            </div>
        </div>
    </div>

</section>


@using (Html.BeginForm("PassRecovery", "Account", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="title-area">
                        <p>
                            @Html.ValidationSummary(true, "", new { @id = "text-danger" })
                        </p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @placeholder = Resource.Email, @class = "form-control" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                    <input type="submit" value=@Resource.Send class="comment-btn" />
                </div>
            </div>
        </div>
    </section>
}




