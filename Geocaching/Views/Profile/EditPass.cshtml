@using Geocaching.App_GlobalResources
@model Geocaching.ViewModels.EditPassViewModel

@{
    ViewBag.Title = @Resource.EditPassword;
}

<section id="single-page-header">
    <div class="overlay">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="single-page-header-left">
                        <h2>@Resource.EditPassword</h2>
                        <p>
                            @Html.DisplayTextFor(model => model.Error)
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@using (Html.BeginForm("EditPass", "Profile", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="title-area">
                        <p>
                            @Html.ValidationSummary(true, "", new { @id = "text-danger" })
                        </p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @placeholder = Resource.Password, @class = "form-control" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @placeholder = Resource.NewPassword, @class = "form-control" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.EditorFor(model => model.ConfirmNewPassword, new { htmlAttributes = new { @placeholder = Resource.ConfirmPassword, @class = "form-control" } })
                            </div>
                        </div>
                        <div class="col-md-6">
                            @Html.ValidationMessageFor(model => model.ConfirmNewPassword, "", new { @class = "control-label" })
                        </div>
                    </div>
                    
                    <input type="submit" value=@Resource.Edit class="comment-btn" />
                </div>
            </div>
        </div>
    </section>
}